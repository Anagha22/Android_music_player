<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.anagha.applatest.MainActivity">


    <ImageView

        app:srcCompat="@drawable/images"
        android:id="@+id/imageView"
        android:layout_width = "200dp"
        android:layout_height= "200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="162dp" />

    <ImageButton
        android:layout_width="82dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/fast_forward_button"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:id="@+id/imageButton3"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        tools:layout_editor_absoluteX="302dp"
        tools:layout_editor_absoluteY="448dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/song_title_place_holder"
        android:id="@+id/imageView3"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/now_playing"
        android:id="@+id/imageView2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="song.mp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        tools:layout_editor_absoluteX="169dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/imageView"
        android:layout_alignRight="@+id/songTimer"
        android:layout_alignEnd="@+id/songTimer" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/songTimer"

        tools:layout_editor_absoluteX="21dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/playButton"
        android:layout_alignStart="@+id/playButton" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playButton"
        tools:layout_editor_absoluteX="287dp"
        tools:layout_editor_absoluteY="342dp"
        android:layout_below="@+id/songTimer"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <ImageButton
        android:layout_width="76dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/play_button"
        android:id="@+id/imageButton"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="439dp"
        android:layout_below="@+id/playButton"
        android:layout_alignLeft="@+id/playButton"
        android:layout_alignStart="@+id/playButton" />

    <ImageButton
        android:layout_width="95dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/rewind_button"
        android:id="@+id/imageButton2"

        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="449dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
